[
  {
    "namespace": "cryptoDotCom",
    "description": "Use the <code>chrome.cryptoDotCom</code> to interact with crypto.com services.",
    "compiler_options": {
      "implemented_in": "brave/browser/extensions/api/crypto_dot_com_api.h"
    },
    "events": [
    ],
    "functions": [
      {
        "name": "getTickerInfo",
        "type": "function",
        "description": "Gets price and volume info for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "asset"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "info",
                "type": "object",
                "properties": {
                  "price": {
                    "type": "string",
                    "description": "price"
                  },
                  "volume": {
                    "type": "string",
                    "description": "volume"
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getChartData",
        "type": "function",
        "description": "Gets chart data for an asset pair",
        "parameters": [
          {
            "type": "string",
            "name": "asset"
          },
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": { "type": "any" }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getSupportedPairs",
        "type": "function",
        "description": "Gets supported asset pairs",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "pair": {
                      "type": "string",
                      "description": "trading pair"
                    },
                    "base": {
                      "type": "string",
                      "description": "base asset"
                    },
                    "quote": {
                      "type": "string",
                      "description": "quote asset"
                    },
                    "price": {
                      "type": "string",
                      "description": "price decimals"
                    },
                    "quantity": {
                      "type": "string",
                      "description": "quantity decimals"
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "getAssetRankings",
        "type": "function",
        "description": "Gets top gainers and losers",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "data",
                "type": "object",
                "properties": {
                  "gainers": {
                    "type": "array",
                    "description": "top gainers",
                    "items": {
                      "type": "object",
                      "additionalProperties": { "type": "any" }
                    }
                  },
                  "losers": {
                    "type": "array",
                    "description": "top losers",
                    "items": {
                      "type": "object",
                      "additionalProperties": { "type": "any" }
                    }
                  }
                }
              }
            ]
          }
        ]
      },
      {
        "name": "isSupported",
        "type": "function",
        "description": "Fetches whether crypto.com is supported",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "supported",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getAccountBalances",
        "type": "function",
        "description": "Retrieves user asset balances",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "balances",
                "type": "any"
              },
              {
                "name": "success",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getClientUrl",
        "type": "function",
        "description": "Retrieves crypto.com auth client url",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "url",
                "type": "string"
              }
            ]
          }
        ]
      },
      {
        "name": "isConnected",
        "type": "function",
        "description": "Check access token is valid or not",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "connected",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "isLoggedIn",
        "type": "function",
        "description": "Check whether user logged in or not",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "loggedIn",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getNewsEvents",
        "type": "function",
        "description": "Get latest news events",
        "parameters": [
          {
            "type": "function",
            "name": "callback",
            "parameters": [
              {
                "name": "events",
                "type": "any"
              },
              {
                "name": "success",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "getDepositAddress",
        "type": "function",
        "description": "Retrieves deposit address",
        "parameters": [
          {
            "name": "asset",
            "type": "string"
          },
          {
            "name": "callback",
            "type": "function",
            "parameters": [
              {
                "name": "data",
                "type": "any"
              },
              {
                "name": "success",
                "type": "boolean"
              }
            ]
          }
        ]
      },
      {
        "name": "createMarketOrder",
        "type": "function",
        "description": "Create market order for buy/sell",
        "parameters": [
          {
            "name": "order",
            "type": "any"
          },
          {
            "name": "callback",
            "type": "function",
            "parameters": [
              {
                "name": "success",
                "type": "boolean"
              }
            ]
          }
        ]
      }
    ],
    "types": [
    ],
    "properties": {
    }
  }
]
