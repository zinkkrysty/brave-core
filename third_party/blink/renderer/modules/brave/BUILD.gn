import("//brave/components/brave_wallet/buildflags/buildflags.gni")
import("//third_party/blink/renderer/modules/modules.gni")

blink_modules_sources("brave") {
  sources = [
    "brave.cc",
    "brave.h",
    "navigator_brave.cc",
    "navigator_brave.h",
  ]

  if (brave_wallet_enabled) {
    sources += [
      "ethereum.cc",
      "ethereum.h",
      "window_brave.cc",
      "window_brave.h",
    ]

    deps = [ "//brave/components/brave_wallet/common:mojom" ]
  }
}
